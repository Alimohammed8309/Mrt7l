<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/ns_ar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_backspace_black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="MIS_NO_ACTIONBAR" />
    <style name="customRatingBard" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">50dp</item>
        <item name="android:indeterminateDrawable">@drawable/star_selector</item>
        <item name="android:progressDrawable">@drawable/star_selector</item>
        <item name="android:minHeight">18dip</item>
    </style>

    <style name="webview" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateDrawable">@drawable/star_selector</item>
        <item name="android:progressDrawable">@drawable/star_selector</item>
        <item name="android:minHeight">24dp</item>
    </style>

    <style name="smallRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/color_yellow</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:progressDrawable">@drawable/star_selector</item>
        <item name="android:indeterminateDrawable">@drawable/star_selector</item>
        <item name="android:scaleType">center</item>
        <item name="android:numStars">5</item>
    </style>



    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/googlesansregular</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_backspace_black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    /* Rating bar theme */
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/rating</item>
        <item name="colorControlActivated">@color/rating</item>
    </style>

    /* Toolbar theme */
    <style name="Toolbar">
        <item name="android:fontFamily">@font/googlesansextrabold</item>
    </style>

    /* Dialog animation */
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_bottom</item>
    </style>

    /* bottom navigation theme */
    <style name="bottomnavigation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>


