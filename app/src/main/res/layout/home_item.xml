<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layoutDirection="rtl"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_bottom_shadow"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardView"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/stateLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="7dp"
                    android:id="@+id/directLayout"
                    android:background="@drawable/bg_btn_green"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/direct"
                        android:text="@string/direct"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginStart="3dp"
                        app:layout_constraintStart_toStartOf="parent"
                        />


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/directIcon"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginStart="9dp"
                        android:src="@drawable/double_arrow"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="7dp"
                    android:id="@+id/advancedLayout"
                    android:background="@drawable/bg_btn_shape"
                    app:layout_constraintEnd_toStartOf="@+id/unDirectLayout"
                    app:layout_constraintTop_toTopOf="parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/advanced"
                        android:text="@string/advanced"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="9dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginStart="3dp"
                        app:layout_constraintStart_toEndOf="@+id/advancedIcon"
                        />


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/advancedIcon"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginStart="9dp"
                        android:src="@drawable/white_like"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="7dp"
                    android:id="@+id/unDirectLayout"
                    android:background="@drawable/bg_btn_orange"
                    app:layout_constraintEnd_toStartOf="@+id/directLayout"
                    app:layout_constraintTop_toTopOf="parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/unDirect"
                        android:text="@string/un_direct"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        app:layout_constraintStart_toEndOf="@+id/unDirectIcon"
                        />


                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/unDirectIcon"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginStart="9dp"
                        android:src="@drawable/white_like"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="18dp"
                android:id="@+id/companyImage"
                android:scaleType="fitXY"
                android:textColor="@color/blue"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintEnd_toStartOf="@+id/stateLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/companyImage"
                android:textSize="14sp"
                android:text="@string/companyname"
                android:layout_marginEnd="14dp"
                android:id="@+id/companyName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintEnd_toStartOf="@+id/stateLayout"
                app:layout_constraintTop_toBottomOf="@+id/companyName"
                app:layout_constraintStart_toEndOf="@+id/companyImage"
                android:textSize="14sp"
                android:text="@string/trip_date"
                android:id="@+id/tripDate"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/dark_gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tripDate"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:id="@+id/description"
                android:layout_marginStart="15dp"
                android:maxLines="4"
                android:visibility="gone"
                android:layout_marginEnd="15dp"
                android:paddingTop="4dp"
                android:lineSpacingExtra="1dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="6dp"
                android:textColor="@color/dark_gray"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tripDate"
                android:layout_marginTop="19dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:id="@+id/llStart"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="@dimen/spacing_xsmall"
                        android:text="@string/time_to_attend"
                        android:textColor="@color/colorlink_blue"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/colorlink_blue"
                        android:textSize="18sp"
                        android:text="@string/lbl_booking_endtime1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:id="@+id/fromCityHint"
                        android:text="@string/hint_from_city" />

                    <TextView
                        android:id="@+id/tvStartTimeAA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorlink_blue"
                        android:textSize="@dimen/font_medium"
                        tools:text="المدينة" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:id="@+id/llmid"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/map_width"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:alpha="0.2"
                        android:visibility="gone"
                        android:contentDescription="@string/txt_todo"
                        android:src="@drawable/ic_map" />


                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/llStart"
                        app:layout_constraintTop_toTopOf="@+id/llStart"
                        android:background="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMIddle"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"

                    app:layout_constraintEnd_toStartOf="@+id/ivbus"
                    app:layout_constraintStart_toEndOf="@+id/ivbus1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layoutDirection="rtl"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:paddingBottom="@dimen/spacing_xsmall"
                        android:text="@string/waiting_duration"
                        android:textColor="@color/colorlink_blue"
                        android:textSize="@dimen/font_small" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/llStart"
                            app:layout_constraintTop_toTopOf="@+id/llStart"
                            app:layout_constraintStart_toEndOf="@+id/llStart"
                            app:layout_constraintEnd_toStartOf="@+id/llMIddle"
                            android:contentDescription="@string/txt_todo"
                            android:src="@drawable/ic_bus"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tvTotalDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_square_text"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:paddingStart="@dimen/spacing_large"
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingBottom="@dimen/spacing_small"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large"
                            tools:text="@string/lbl_booking_endtime1" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/llStart"
                            app:layout_constraintTop_toTopOf="@+id/llStart"
                            app:layout_constraintStart_toEndOf="@+id/llStart"
                            app:layout_constraintEnd_toStartOf="@+id/llMIddle"
                            android:contentDescription="@string/txt_todo"
                            android:src="@drawable/ic_bus"
                            app:tint="@color/colorPrimary" />




                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvHold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:paddingTop="@dimen/spacing_xsmall"
                        android:paddingBottom="@dimen/spacing_xsmall"
                        android:textAlignment="center"
                        android:textColor="@color/textchild"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/map_width"
                    android:layout_height="@dimen/_50sdp"
                    android:alpha="0.2"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/llEnd"
                    android:contentDescription="@string/txt_todo"
                    android:src="@drawable/ic_map" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="0.3dp"
                    app:layout_constraintEnd_toStartOf="@+id/ivbus"
                    app:layout_constraintStart_toEndOf="@+id/ivbus1"
                    app:layout_constraintTop_toTopOf="@+id/llMIddle"
                    app:layout_constraintBottom_toBottomOf="@+id/llMIddle"
                    android:background="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/ivbus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/llEnd"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="@+id/llEnd"
                    app:layout_constraintEnd_toStartOf="@id/llEnd"
                    app:layout_constraintStart_toEndOf="@+id/llMIddle"
                    android:contentDescription="@string/txt_todo"
                    android:visibility="gone"
                    android:src="@drawable/ic_bus"
                    app:tint="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/llEnd"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:paddingBottom="@dimen/spacing_xsmall"
                        android:text="@string/time_to_start"
                        android:textColor="@color/colorlink_blue"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:textColor="@color/colorlink_blue"
                        android:textSize="18sp"
                        tools:text="@string/txt_time" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:id="@+id/toCityHint"
                        android:textSize="13sp"
                        android:text="@string/hint_to_city" />

                    <TextView
                        android:id="@+id/tvEndTimeAA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:textColor="@color/colorlink_blue"
                        android:textSize="@dimen/font_medium"
                        tools:text="الرياض" />
                </LinearLayout>



            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/availableLayout"
                app:layout_constraintTop_toBottomOf="@+id/llTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="23dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/busType"
                    android:layout_marginEnd="15dp"
                    android:text="نوع النقل : vip"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/availableSeats"
                    android:textColor="@color/green"
                    android:text="الأماكن المتاحة : 3 اماكن"
                    android:textSize="12sp"
                    android:layout_marginStart="9dp"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/availableLayout"
                android:lines="1"
                android:id="@+id/line"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="----------------------------------------------------------------------------------------"

                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/priceLayout"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/priceTitle"
                    android:id="@+id/price"
                    android:layout_marginEnd="15dp"
                    android:text="20 ريال"
                    android:layout_marginBottom="7dp"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="10dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/colorlink_blue"
                    android:id="@+id/priceTitle"
                    android:layout_marginBottom="7dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="سعر الرحلة"
                    android:textSize="13sp"
                    android:layout_marginStart="11dp"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reserve"
                app:layout_constraintTop_toBottomOf="@+id/priceLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:background="@drawable/green_btn"
                android:text="@string/reserve_trip"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/white"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>