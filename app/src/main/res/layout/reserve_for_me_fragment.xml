<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="@color/light_grey"
        >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".ui.fragment.direct_reserve.ReserveForMeFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        android:layoutDirection="rtl"

        app:contentInsetStart="0dp"
        app:title="Home"
        app:titleTextColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layoutDirection="rtl"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="@string/reservation_details"
                android:textColor="@color/white"
                android:textSize="@dimen/font_mlarge" />

            <include layout="@layout/layout_addnotification" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/detailsTitleLayout"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/passengersLayout"
        app:layout_constraintEnd_toEndOf="parent"

        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more_details"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:text=""
        android:drawablePadding="10dp"
        app:drawableEndCompat="@drawable/ic_eye_line"
        app:drawableTint="@color/green" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/darkblues"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/trip_details"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/dataLayout"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/detailsTitleLayout"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:id="@+id/companyName"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="14sp"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:text="@string/companyname"
                    android:gravity="center"
                    android:padding="4dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/tripDate"
                    android:gravity="right"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="14sp"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:text="@string/trip_date"
                    android:gravity="center"
                    android:padding="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:id="@+id/fromCity"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="14sp"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:text="@string/hint_from_city"
                    android:gravity="center"
                    android:padding="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:id="@+id/toCity"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="14sp"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:text="@string/hint_to_city"
                    android:gravity="center"
                    android:padding="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:id="@+id/attendTime"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="14sp"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:text="@string/time_to_attend"
                    android:gravity="center"
                    android:padding="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="14sp"
                    android:id="@+id/waitingTime"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:text="@string/waiting_duration"
                    android:gravity="center"
                    android:padding="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:id="@+id/startTime"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="14sp"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:text="@string/time_to_start"
                    android:gravity="center"
                    android:padding="4dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:id="@+id/tripNumber"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:text="@string/trip_number"
                    android:gravity="center"
                    android:padding="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="@color/colorlink_blue"
                    android:textSize="14sp"
                    android:id="@+id/startStation"
                    android:padding="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:layout_marginRight="13dp"
                    android:text="@string/start_station"
                    android:gravity="center"
                    android:padding="4dp"
                    />

            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/passengersLayout"
        android:background="@color/white"
        android:gravity="right"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passengerNamesTitle"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/passengers_data"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/passengersRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/passengerNamesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passengerProgress"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/passengerNamesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/contactLayout"
        app:layout_constraintTop_toBottomOf="@+id/voucherLayout"
        android:layout_below="@+id/dataLayout"
         android:layout_marginTop="9dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notesTitle"
            android:text="@string/reservation_notes"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/notes"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/note"
                android:lineSpacingExtra="15dp"
                android:text="@string/to_confirm"
                android:textColor="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/whatsappLogo"
                android:layout_gravity="right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center|right"
                android:drawablePadding="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:text="@string/reservation_management"
                android:contentDescription="@string/whatsapp"
                app:drawableStartCompat="@drawable/ic_whatsapp_fill"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="22dp"
                android:layout_marginTop="35dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:id="@+id/voucherLayout"
            app:layout_constraintTop_toBottomOf="@+id/dataLayout"
            android:layoutDirection="ltr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="6dp"
                 android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/verified"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                android:text="@string/verified"
                />
        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="14sp"
             android:gravity="center"
            android:layout_marginEnd="-4dp"
            android:id="@+id/promoProgress"
            android:visibility="gone"
            android:layout_marginStart="15dp"
             />
            <TextView
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/bg_btn_shape"
                android:textSize="14sp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginEnd="-4dp"
                android:id="@+id/verify_promo"
                android:layout_marginStart="15dp"
                android:text="@string/txt_verify"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                >

         <EditText
             android:layout_width="match_parent"
              app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_height="wrap_content"
                android:background="@drawable/voucher_background"
            android:inputType="text"
             android:padding="9dp"
             android:id="@+id/voucherEt"
             android:paddingStart="9dp"
             android:paddingEnd="9dp"
             android:hint="@string/enter_voucher"
             android:textSize="14sp"
             />
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/removePromo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="15dp"
                    android:visibility="gone"
                    android:background="@drawable/close"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:padding="6dp"
             android:textSize="13sp"
            android:textColor="@color/dark_gray"
            android:gravity="center"
            android:id="@+id/d"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:text="@string/have_voucher"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layoutDirection="ltr"
        android:id="@+id/priceLayout"
        android:background="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
         app:layout_constraintTop_toBottomOf="@+id/payLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:layout_marginTop="9dp"
            android:background="@color/white"
            android:id="@+id/priceTitle"
            app:layout_constraintTop_toBottomOf="@+id/passengersLayout"
            app:layout_constraintEnd_toEndOf="parent"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/more_prices"
                android:layout_marginStart="19dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                 android:textColor="@color/green"
                android:textSize="16sp"
                android:text=""
                android:drawablePadding="10dp"
                app:drawableEndCompat="@drawable/ic_eye_line"
                app:drawableTint="@color/green" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/darkblues"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/ticket_prices"
                />
        </LinearLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/priceRecyclerView"
            android:visibility="gone"
             />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/dark_gray"
            android:layout_marginTop="10dp"
            android:layout_marginStart="14dp"
            android:visibility="gone"
            android:id="@+id/priceLine"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="10dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textColor="@color/colorlink_blue"
                android:textSize="14sp"
                android:paddingTop="6dp"
                 android:gravity="right"
                android:id="@+id/ticketsPrice"
                android:textStyle="bold"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"  />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:textColor="@color/colorlink_blue"
                android:textSize="14sp"
                android:paddingTop="6dp"
                android:text="@string/total_ticket_price"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingStart="7dp"
                android:paddingEnd="7dp" />

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textColor="@color/colorlink_blue"
                android:textSize="14sp"
                android:paddingTop="6dp"
                 android:gravity="right"
                android:id="@+id/voucherDiscount"
                android:textStyle="bold"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"  />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:textColor="@color/colorlink_blue"
                android:textSize="14sp"
                android:paddingTop="6dp"
                android:text="@string/voucher_discount"
                android:gravity="right"
                android:paddingStart="7dp"
                android:textStyle="bold"
                android:paddingEnd="7dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/dark_gray"
            android:layout_marginTop="10dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="10dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textColor="@color/colorlink_blue"
                android:textSize="14sp"
                android:paddingTop="6dp"
                 android:gravity="right"
                android:textStyle="bold"
                android:id="@+id/finalTotal"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"  />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:textColor="@color/colorlink_blue"
                android:textSize="14sp"
                android:paddingTop="6dp"
                android:text="@string/total_price"
                android:gravity="right"
                android:textStyle="bold"
                android:paddingStart="7dp"
                android:paddingEnd="7dp" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/contactLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layoutDirection="rtl"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        app:layout_goneMarginTop="14dp"
        android:id="@+id/payLayout"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes"
            android:text="@string/pay_data"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textSize="14sp"
            android:layout_gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:id="@+id/companyAddress"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/notes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeTitle"
                android:text="@string/company_place"
                android:textColor="@color/dark_gray"
                app:layout_constraintTop_toBottomOf="@+id/titleLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/companyPlace"
                android:textColor="@color/dark_gray"
                app:layout_constraintTop_toBottomOf="@+id/placeTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="7dp"
                android:textSize="13sp"
                />
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payTypeTitle"
            android:text="@string/pay_type"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_gravity="right"
            app:layout_constraintTop_toBottomOf="@+id/companyAddress"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@+id/payTypeTitle"
            app:layout_constraintBottom_toTopOf="@+id/bankLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/visa"
            android:contentDescription="visa"
            android:id="@+id/visaIcon"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@+id/payTypeTitle"
            app:layout_constraintBottom_toTopOf="@+id/bankLayout"
            app:layout_constraintEnd_toStartOf="@+id/visaIcon"

            android:src="@drawable/mastercard"
            android:contentDescription="visa"
            android:id="@+id/masterCardIcon"
            />
        <RadioGroup
            android:id="@+id/payGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/payTypeTitle"
            app:layout_constraintStart_toStartOf="parent"
            >

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/payCash"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorlink_blue"
                android:text="@string/pay_cash"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/payVisa"
                android:drawablePadding="10dp"
                android:textColor="@color/colorlink_blue"
                android:text="@string/pay_visa"
                android:layout_marginStart="20dp"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/payBank"
                android:textColor="@color/colorlink_blue"
                android:text="@string/pay_bank"
                android:layout_marginStart="20dp"
                />

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:id="@+id/bankLayout"
            app:layout_constraintTop_toBottomOf="@+id/payGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accountTitle"
                android:text="@string/account"
                android:textColor="@color/darkblues"
                app:layout_constraintTop_toBottomOf="@+id/companyPlace"
                android:layout_marginStart="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account"
                android:textColor="@color/dark_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="7dp"
                app:layout_constraintTop_toBottomOf="@+id/accountTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="7dp"
                android:textSize="13sp"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/bankLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layoutDirection="rtl"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/resetImage"
             android:id="@+id/uploadBillLayout"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:paddingBottom="10dp"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/upload_bill"
                android:id="@+id/uploadIcon"
                android:contentDescription="@string/upload_bill"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uploadTitle"
                android:layout_gravity="center_vertical"
                android:text="@string/upload_bill"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp" />




        </LinearLayout>


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/resetImage"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/uploadBillLayout"
            app:layout_constraintStart_toStartOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_marginTop="15dp"
        android:id="@+id/policyLayout"
        app:layout_constraintTop_toBottomOf="@+id/priceLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="15dp"
        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/policyCheckBox"
            android:layout_marginRight="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/policyText"
            android:text="@string/accept_policy"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPrimary"
            />

    </LinearLayout>


    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/policyLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_btn_shape"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/white"
        android:id="@+id/confirmProgress"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_marginTop="20dp"
         app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
          />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         app:layout_constraintTop_toBottomOf="@+id/policyLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_btn_shape"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:id="@+id/confirmReservation"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        android:text="@string/confirm_reservation"
        android:padding="7dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
