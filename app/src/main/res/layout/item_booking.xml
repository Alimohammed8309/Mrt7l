<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rlMain"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:id="@+id/datt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/white_background"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="18dp"
            android:id="@+id/companyImage"
            android:textColor="@color/blue"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:layout_toEndOf="@+id/companyImage"
            android:gravity="start"
            android:text="@string/companyname"
            android:textColor="@color/red"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tripDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="14dp"
            android:layout_toEndOf="@+id/companyImage"
            android:gravity="start"
            android:text="@string/trip_date"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/companyImage"
            app:layout_constraintTop_toBottomOf="@+id/companyName" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripDate"
             android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layoutDirection="ltr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tripDate">

            <LinearLayout
                android:id="@+id/llStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:gravity="right"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:text="@string/time_to_attend"
                    android:textColor="@color/textchild"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:text="@string/lbl_booking_endtime1"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:id="@+id/tvStartTimeAA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:textColor="@color/textchild"
                    android:textSize="@dimen/font_medium"
                    tools:text="المدينة" />
            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/map_width"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:layout_toEndOf="@+id/llStart"
                android:alpha="0.2"
                android:contentDescription="@string/txt_todo"
                android:src="@drawable/ic_map"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivbus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/llStart"
                android:contentDescription="@string/txt_todo"
                android:src="@drawable/ic_bus"
                app:layout_constraintBottom_toBottomOf="@+id/llStart"
                app:layout_constraintEnd_toStartOf="@+id/llMIddle"
                app:layout_constraintStart_toEndOf="@+id/llStart"
                app:layout_constraintTop_toTopOf="@+id/llStart"
                app:tint="@color/colorPrimary" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/llMIddle"
                android:layout_toEndOf="@+id/ivbus"
                android:background="@color/colorPrimary"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/llStart"
                app:layout_constraintTop_toTopOf="@+id/llStart" />

            <LinearLayout
                android:id="@+id/llMIddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/ivbus"
                app:layout_constraintStart_toEndOf="@+id/ivbus1"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:text="@string/waiting_duration"
                    android:textColor="@color/textchild"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tvTotalDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_square_text"

                    android:paddingStart="@dimen/spacing_large"
                    android:paddingTop="@dimen/spacing_xsmall"
                    android:paddingEnd="@dimen/spacing_large"
                    android:paddingBottom="@dimen/spacing_small"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_large"

                    />

                <TextView
                    android:id="@+id/tvHold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:paddingTop="@dimen/spacing_xsmall"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:textAlignment="center"
                    android:textColor="@color/textchild"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/map_width"
                android:layout_height="@dimen/_50sdp"
                android:layout_toStartOf="@+id/llEnd"
                android:layout_toEndOf="@+id/llMIddle"
                android:alpha="0.2"
                android:contentDescription="@string/txt_todo"
                android:src="@drawable/ic_map"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/llEnd"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/ivbus1"
                android:layout_toEndOf="@+id/llMIddle"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/llMIddle"
                app:layout_constraintEnd_toStartOf="@+id/ivbus"
                app:layout_constraintStart_toEndOf="@+id/ivbus1"
                app:layout_constraintTop_toTopOf="@+id/llMIddle" />

            <ImageView
                android:id="@+id/ivbus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/llEnd"
                android:contentDescription="@string/txt_todo"
                android:src="@drawable/ic_bus"
                app:layout_constraintBottom_toBottomOf="@+id/llEnd"
                app:layout_constraintEnd_toStartOf="@id/llEnd"
                app:layout_constraintStart_toEndOf="@+id/llMIddle"
                app:layout_constraintTop_toTopOf="@+id/llEnd"
                app:tint="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/llEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:gravity="left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:text="@string/time_to_start"
                    android:textColor="@color/textchild"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:textColor="@color/textheader"
                    android:textSize="@dimen/font_medium"
                    tools:text="@string/txt_time" />

                <TextView
                    android:id="@+id/tvEndTimeAA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="@dimen/spacing_medium"
                    android:textColor="@color/textchild"
                    android:textSize="@dimen/font_medium"
                    tools:text="الرياض" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/detailsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llTime"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_keyboard_arrow_down_black"
            android:text="التفاصيل"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llTime"
            android:id="@+id/tripCanceled"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="7dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:visibility="gone"
            android:textSize="16sp"
            android:background="@drawable/bg_red_square"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llTime"
            android:id="@+id/tripConfirmed"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="7dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:visibility="gone"
            android:textSize="16sp"
            android:background="@drawable/bg_btn_green"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tripPending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_btn_orange"
            android:paddingStart="7dp"
            android:paddingTop="4dp"
            android:paddingEnd="7dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llTime"
            android:id="@+id/busType"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
             >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نوع النقل :"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17sdp"
                android:id="@+id/type"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line"
            android:visibility="gone"
            android:background="@color/dark_gray"
            android:layout_below="@+id/busType"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/AllDataLayout"
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:orientation="vertical"

            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passengersRecyclerView"
                 android:layoutDirection="ltr"
                android:visibility="gone"
                android:layout_marginTop="12dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/passengersRecyclerView"
                android:layout_marginTop="12dp"
                android:id="@+id/dataLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/passenger_name"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/age_type"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/passengerType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/passport_num"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/passportNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/title_price"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/trip_id"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tripNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/reserve_num"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/reservationNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/ticket_number"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/ticketNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/ticket_number"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="@string/start_station"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/startStation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="start"
                        android:padding="6dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/namea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="14dp"
                android:gravity="right"
                android:padding="8dp"
                android:textColor="@color/darkblues"
                android:textSize="17sp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:gravity="right|center_vertical"
                android:padding="8dp"
                android:textColor="@color/dark_gray"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon" />

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="22dp"
                android:src="@drawable/pin"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon" />

            <LinearLayout
                android:id="@+id/payLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dataLayout"
                android:layout_marginTop="6dp"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city">

                <LinearLayout
                    android:id="@+id/contactLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical"
                   >


                    <TextView
                        android:id="@+id/payTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/reservation_notes"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/notes"
                        app:layout_constraintTop_toBottomOf="@+id/city" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:lineSpacingExtra="10dp"
                            android:text="@string/to_confirm"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/whatsappLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="32dp"
                            android:contentDescription="@string/whatsapp"
                            android:drawablePadding="4dp"
                            android:gravity="center|right"
                            android:text="@string/reservation_management"
                            android:textColor="@color/colorPrimary"
                            app:drawableStartCompat="@drawable/ic_whatsapp_fill"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="13dp"
                    android:text="@string/pay_data"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contactLayout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notes">

                    <TextView
                        android:id="@+id/placeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="13dp"
                        android:text="@string/company_place"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/notes" />

                    <TextView
                        android:id="@+id/companyPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="13dp"
                        android:text="@string/company_place"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeTitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contactLayout">

                    <TextView
                        android:id="@+id/accountTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="13dp"
                        android:text="@string/account"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/companyPlace" />

                    <TextView
                        android:id="@+id/account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="13dp"
                        android:layout_marginBottom="7dp"
                        android:text="@string/account"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/accountTitle" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="right"
                    android:id="@+id/payMehtodLayout"
                     android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contactLayout">

                    <TextView
                        android:id="@+id/payStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="13dp"
                        android:text="@string/pay_status"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/companyPlace" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="13dp"
                        android:layout_marginBottom="7dp"
                        android:text="@string/pay_status"
                        android:textColor="@color/dark_gray"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/accountTitle" />


                </LinearLayout>

                <TextView
                    android:id="@+id/billImageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/bill_photo"
                    android:textColor="@color/dark_gray"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/accountTitle" />


                <ImageView
                    android:id="@+id/billPhoto"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/bill_photo"
                    android:padding="9dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/bill" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payLayout"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/printTicket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_square_text"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/print_ticket"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/print" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editTrip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_trcwaz"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/edit_trip"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/pencil_white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="6dp"
                    android:text="@string/cancel_trip"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rateTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonsLayout"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_square_text"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="@string/rate_trip"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

</layout>


